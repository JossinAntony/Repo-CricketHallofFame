<body>
    <div class="topnav">
        <!-- <a class="active"  href="/home">Home</a> -->
        <!-- <a class="active" id="activ" href="/view">SignRecords</a> -->
        <a class="navbar-brand" href="/"><h3><em><%= pageName.pagename %></em></h3></a>
        <a class="navbar-brand" id="activ" href="/signup">SignUp</a>
        <a class="navbar-brand" id="activ" href="/login">SignIn</a>
    </div>

    <div class="container mt-5 mb-5">
           
        <div class="row justify-content-md-center">
               
            <div class="col col-1 col-md-3"></div>
            
            <div class="col col-10 col-md-6 border border-secondary rounded p-5">
                  
                <form action="/usersignup" method="POST">
                    <table class="table table-borderless">
                            <center><h3>SignUp</h3></center>
                        <tr><td>Email</td><td><input type="email" class="form-control" name="uemail" id=""></td></tr>
                        <tr><td>Username</td><td><input type="text" class="form-control" name="uname" id=""></td></tr>
                        <tr><td>Password</td><td><input type="password" class="form-control" name="upass" id=""></td></tr>
                        <tr><td>Confirm-Password</td><td><input type="password" class="form-control" name="ucpass" id=""></td></tr>
                        <tr><td><input type="reset" class="btn btn-danger float-right" value="Reset"></td><td><input type="submit" class="btn btn-primary" value="signup"></td></tr>
                    </table>
                </form>
        
            </div>
            <div class="col col-1 col-md-3"></div>
        </div>
    </div>

</body>
</html>